<% if user_signed_in? %>
  <% if memory.likes_user(current_user.id) %>
    <li class="btn-floating halfway-fab waves-effect waves-light red">
      <%= link_to memory_like_path(memory, current_user.id, like), method: :delete, remote: true do %>
        <i class="material-icons">favorite_border</i>
      <% end %>
    </li>
    <p> いいね！<%= memory.likes_count %> 件</p>
  <% else %>
    <div class="btn-floating halfway-fab waves-effect waves-light red">
      <%= link_to memory_likes_path(memory, current_user.id), method: :post, remote: true do %>
        <i class="material-icons">favorite_border</i>
      <% end %>
    </div>
    <p> いいね！<%= memory.likes_count %> 件</p>
  <% end %>
<% else %>
  <li class="btn-floating halfway-fab waves-effect waves-light red">
    <% link_to root_path %>
      <i class="material-icons">favorite_border</i>
  </li>
  <p> いいね！<%= memory.likes_count %> 件</p>
<% end %>
