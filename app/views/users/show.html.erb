<%= render 'memories/head-menu' %>
<div class="mypage-wrap">
  <div class="mypage-top">
    <div class="avatar">
      <div class="avater-circle">
        <%= image_tag "/images/user.png", class: "avater-image" %>
      </div>
    </div>
    <div class="user-info">
      <p class="user-info--name"><%= @user.name %></p>
      <p>投稿<%= @memory.count %>件 </p>
      <p>行ってみたい！<%= @likes.count %>件</p>
    </div>
  </div>
  <div class="memory-list">
    <div class="list-box">
      <% @memory.each do |memory| %>
        <div class="box-content">
          <%= link_to memory_path(memory.id), method: :GET do %>
            <%= image_tag memory.image.url %>
          <% end %>
        </div>
      <% end %>
    </div>
  </div>
</div>