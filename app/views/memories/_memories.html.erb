<% memories.each do |memory| %>
  <div class="row">
    <div class="col s12 m6">
      <div class="card">
        <div class="card-image">
          <div class="memory_image"><img src= "<%= memory.image.url %>" ></div>
        </div>
        <div class="card-footer">
          <div class="likes-count">
            <span class="likes-count">いいね! <%= memory.likes_count %>件</span>
          </div>
          <div class="icon-link">
          <%= link_to memory_path(memory.id), method: :GET do %>
            <i class="small material-icons">chat</i>
          <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
<% end %>
